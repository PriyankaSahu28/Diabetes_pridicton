<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your details"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age "
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextDiabetesPedigreeFunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diabetes Pedigree Function (0.08 to 2.42"

        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editbmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your BMI  (18.5 to 24.9)"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />


        <EditText
            android:id="@+id/editInsulin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Insulin  (5 to 15)"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editSkinThickness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Skin Thickness  (1.9  to 2.4 mm)"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your blood pressure (80 to 200)"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editGlucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Glucose ( 70 to 700)"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/editPregnancies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Pregneencies (0 or 1)"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />


        <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="24dp" />

        <ProgressBar
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:visibility="gone"
            android:id="@+id/progress"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>